<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/studentCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentPadding="4dp"
    app:cardElevation="3dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:id="@+id/contentContainer">

        <ImageView
            android:id="@+id/StudentPhoto"
            android:layout_width="110dp"
            android:layout_height="110dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/profilepic" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="70dp"
            android:layout_height="29dp"
            android:text="Name :"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/StudentPhoto"
            android:layout_marginStart="16dp"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/StudentName"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:layout_marginStart="5dp"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tvName"/>

        <TextView
            android:id="@+id/tvStudentNeeds"
            android:layout_width="55dp"
            android:layout_height="20dp"
            android:text="Needs :"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvName"
            app:layout_constraintLeft_toRightOf="@+id/StudentPhoto"/>

        <TextView
            android:id="@+id/StudentNeeds"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@+id/tvStudentNeeds"
            app:layout_constraintTop_toBottomOf="@+id/StudentName" />

        <Button
            android:id="@+id/btnDonate"
            android:layout_width="@dimen/btn_width"
            android:layout_height="@dimen/btn_height"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/secondary_color"
            android:fontFamily="@font/abeezee"
            android:text="@string/donate"
            app:cornerRadius="@dimen/btnRadius"
            app:layout_constraintStart_toEndOf="@+id/StudentPhoto"
            app:layout_constraintTop_toBottomOf="@+id/StudentNeeds" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>