<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="25dp"
        tools:context=".StudentRegister">


        <TextView
            android:id="@+id/txtReg"
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/abeezee"
            android:text="Make Donation"
            android:textColor="@color/heading_hash"
            android:textSize="@dimen/headin_txt" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Donor Details"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="@dimen/input_field_width"
            android:layout_height="@dimen/input_field_height"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/input_bg"
            android:ems="10"
            android:fontFamily="@font/abeezee"
            android:hint="@string/full_name"
            android:inputType="textPersonName"
            android:paddingLeft="25dp"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/mail"
            android:layout_width="@dimen/input_field_width"
            android:layout_height="@dimen/input_field_height"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/input_bg"
            android:ems="10"
            android:fontFamily="@font/abeezee"
            android:hint="@string/hint_email"
            android:inputType="textEmailAddress"
            android:paddingLeft="25dp"
            android:textSize="18sp" />


        <EditText
            android:id="@+id/phone"
            android:layout_width="@dimen/input_field_width"
            android:layout_height="@dimen/input_field_height"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/input_bg"
            android:ems="10"
            android:fontFamily="@font/abeezee"
            android:hint="@string/phone"
            android:inputType="phone"
            android:paddingLeft="25dp"
            android:paddingTop="10dp"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView42"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Donation Details" />

        <EditText
            android:id="@+id/cat"
            android:layout_width="@dimen/input_field_width"
            android:layout_height="@dimen/input_field_height"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/input_bg"
            android:ems="10"
            android:fontFamily="@font/abeezee"
            android:hint="Category"
            android:inputType="textPersonName"
            android:paddingLeft="25dp"
            android:paddingTop="10dp"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/qty"
            android:layout_width="348dp"
            android:layout_height="46dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/input_bg"
            android:ems="10"
            android:fontFamily="@font/abeezee"
            android:hint="Quantity"
            android:inputType="textEmailAddress"
            android:paddingLeft="25dp" />


        <EditText
            android:id="@+id/location"
            android:layout_width="@dimen/input_field_width"
            android:layout_height="@dimen/input_field_height"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/input_bg"
            android:ems="10"
            android:fontFamily="@font/abeezee"
            android:hint="Pick-up location"
            android:inputType="text"
            android:paddingLeft="25dp" />

        <EditText
            android:id="@+id/day"
            android:layout_width="@dimen/input_field_width"
            android:layout_height="@dimen/input_field_height"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/input_bg"
            android:ems="10"
            android:fontFamily="@font/abeezee"
            android:hint="Date"
            android:inputType="date"
            android:paddingLeft="25dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="39dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="353dp"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:layout_marginTop="32dp"
                android:backgroundTint="@color/heading_hash"
                android:fontFamily="@font/abeezee"
                android:text="@string/txt_cancel"
                app:cornerRadius="@dimen/btnRadius"
                app:layout_constraintEnd_toStartOf="@+id/btnDonate"
                app:layout_constraintHorizontal_bias="0.231"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btnDonate"
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="24dp"
                android:backgroundTint="@color/secondary_color"
                android:fontFamily="@font/abeezee"
                android:text="DONATE"
                app:cornerRadius="@dimen/btnRadius"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="75dp" />

    </LinearLayout>
</ScrollView>
