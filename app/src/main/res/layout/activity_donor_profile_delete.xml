<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DonorProfileDelete">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="351dp"
        android:layout_height="45dp"
        android:layout_marginTop="34dp"
        android:text="@string/delete_warning_msg"
        android:textAlignment="center"
        android:textColor="@color/warning_red_color"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView41" />

    <TextView
        android:id="@+id/textView41"
        android:layout_width="301dp"
        android:layout_height="57dp"
        android:layout_marginTop="21dp"
        android:text="@string/sure_msg"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView43"  />

    <TextView
        android:id="@+id/textView43"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/delete_profile"
        android:textSize="@dimen/headin_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnDPdelete"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_marginTop="208dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="310dp"
        android:backgroundTint="@color/secondary_color"
        android:fontFamily="@font/abeezee"
        android:text="@string/delete"
        app:cornerRadius="@dimen/btnRadius"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView41" />

    <Button
        android:id="@+id/btnDPDcancel"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_marginTop="124dp"
        android:layout_marginBottom="315dp"
        android:backgroundTint="@color/heading_hash"
        android:fontFamily="@font/abeezee"
        android:text="@string/txt_cancel"
        app:cornerRadius="@dimen/btnRadius"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnDPdelete"
        app:layout_constraintHorizontal_bias="0.434"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />
</androidx.constraintlayout.widget.ConstraintLayout>